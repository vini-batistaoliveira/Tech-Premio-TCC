@model Ultimate_Tech_Premio.Models.Usuario

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Detalhes Usuario</h4>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.permissao)

            <div class="form-group">
                <div class="row">
                    <label>Nome</label>
                </div>
                <div class="row">
                    @Html.DisplayFor(model => model.nome, new { htmlAttributes = new { @class = "form-control required", required = true } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Login</label>
                </div>
                <div class="row">
                    @Html.DisplayFor(model => model.cpf, new { htmlAttributes = new { @class = "form-control required", required = true } })
                    @Html.ValidationMessageFor(model => model.cpf, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Email</label>
                </div>
                <div class="row">
                    @Html.DisplayFor(model => model.email, new { htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Telefone</label>
                </div>
                <div class="row">
                    @Html.DisplayFor(model => model.telefone, new { htmlAttributes = new { @class = "form-control required", required = true } })
                    @Html.ValidationMessageFor(model => model.telefone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Permissão</label>
                </div>
                <div class="row">
                    @Html.DisplayFor(model => model.telefone, new { htmlAttributes = new { @class = "form-control required", required = true } })
                    @Html.ValidationMessageFor(model => model.permissao, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Usuario")';return false;">Voltar</button>
                </div>
            </div>
        </div>
    </div>
}

