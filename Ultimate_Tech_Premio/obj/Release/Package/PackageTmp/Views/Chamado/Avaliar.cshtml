@model Ultimate_Tech_Premio.Models.Chamado
@using Ultimate_Tech_Premio.Enum

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">

        <div class="form-horizontal">
            <h4>Avaliacao_Chamado</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
           

            <div class="form-group">
                <div class="row">
                    <label class="control-label">O Chamado Foi Solucionado?</label>
                </div>
                <div class="row">
                    @Html.DropDownListFor(model => model.solucionado_avaliacao, new SelectList(ViewBag.solucionadoSN, "SIM"), "Selecione", new { @class = "form-control required", required = true })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label class="control-label">Cordialidade do Tecnico</label>
                </div>
                <div class="row">
                    @Html.DropDownListFor(model => model.cordialidade_avaliacao, new SelectList(ViewBag.Notas), "Selecione", new { @class = "form-control required", required = true })
                    @Html.ValidationMessageFor(model => model.cordialidade_avaliacao, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <label class="control-label">Habilidade do Tecnico</label>
                </div>
                <div class="row">
                    @Html.DropDownListFor(model => model.habilidade_avaliacao, new SelectList(ViewBag.Notas), "Selecione", new { @class = "form-control required", required = true })
                    @Html.ValidationMessageFor(model => model.habilidade_avaliacao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label class="control-label">Sugestão de Melhora Para um Futuro Chamado</label>
                </div>
                <div class="row">
                    @Html.EditorFor(model => model.sugestao_avaliacao, new { htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessageFor(model => model.sugestao_avaliacao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label class="control-label">Nota Geral do Tecnico e do Chamado</label>
                </div>
                <div class="row">
                    @Html.DropDownListFor(model => model.nota_avaliacao, new SelectList(ViewBag.Notas), "Selecione", new { @class = "form-control", required = true })
                    @Html.ValidationMessageFor(model => model.nota_avaliacao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <input type="submit" value="Avaliar" class="btn btn-primary" />
                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Chamado")';return false;">Cancelar</button>
                </div>
            </div>
        </div>


        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
}