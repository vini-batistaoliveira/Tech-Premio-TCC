@model Ultimate_Tech_Premio.Models.Usuario

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h4>Editar Usuario</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ativo)

            <div class="form-group">
                <div class="row">
                    <label>Nome</label>
                </div>
                <div class="row">
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control required", required = true } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Login</label>
                </div>
                <div class="row">
                    @Html.EditorFor(model => model.cpf, new { htmlAttributes = new { @class = "form-control required", required = true } })
                    @Html.ValidationMessageFor(model => model.cpf, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Email</label>
                </div>
                <div class="row">
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", required = true } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Telefone</label>
                </div>
                <div class="row">
                    @Html.EditorFor(model => model.telefone, new { htmlAttributes = new { @class = "form-control required", required = true } })
                    @Html.ValidationMessageFor(model => model.telefone, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Restaurar Senha</label>
                </div>
                <div class="row">
                    @Html.PasswordFor(model => model.senha, new { @class = "form-control password", required = true })
                    @Html.ValidationMessageFor(model => model.senha, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <label>Permissão</label>
                </div>
                <div class="row">
                    @Html.DropDownListFor(model => model.permissao, new SelectList(ViewBag.Permissao), "Selecione", new { @class = "form-control password", required = true })
                    @Html.ValidationMessageFor(model => model.permissao, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <button type="submit" class="btn btn-success">Editar Usuario</button>
                    <button class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Usuario")';return false;">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
